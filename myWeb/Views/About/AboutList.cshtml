@model List<About>
@{
    ViewData["Title"] = "AboutList";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Hakkımda</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Hakkımda Kısmı</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Hakkımda ile ilgili işlemlerinizi aşağıda bulunan panelden yapabilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Başlık</th>
									<th scope="col">Özet</th>
									<th scope="col">Detaylar</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
						
								@foreach(var item in Model)
								{
									<tr>
										<td>@item.AboutId</td>
										<td>@item.Title</td>
										<td>@item.SubDescription</td>
										<td>@item.Details</td>
										<td><a href="/About/UpdateAbout/@item.AboutId" class="btn btn-success">Güncelle</a></td>
									</tr>

								}

							
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
