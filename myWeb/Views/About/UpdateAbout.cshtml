@model About
@{
	ViewData["Title"] = "UpdateAbout";
	Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Hakkımda</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Hakkımda Düzenleme</div>
					</div>
					<div class="card-body">
						<form method="post">
							<input type="hidden" asp-for="AboutId" />
							<label>Başlık</label>
							<input type="text" asp-for="Title" class="form-control" />
							<br />
							<label>Özet</label>
							<textarea rows="4" class="form-control" asp-for="SubDescription"></textarea>
							<br />
							<label>Detaylar</label>
							<textarea rows="4" class="form-control" asp-for="Details"></textarea>
							<br />
							<button class="btn btn-warning">Güncelle</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>

