@model List<Contact>
@{
    ViewData["Title"] = "ContactList";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">İletişim Bilgileri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">İletişim Bilgileri Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							İletişim Bilgileri ile ilgili işlemlerinizi aşağıda bulunan panelden yapabilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Başlık</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Telefon</th>
									<th scope="col">Email</th>
									<th scope="col">Adres</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.ContactId</td>
										<td>@item.Title</td>
										<td>@item.Description</td>
										<td>@item.Phone</td>
										<td>@item.Email</td>
										<td>@item.Address</td>
										<td><a href="/Contact/DeleteContact/@item.ContactId" class="btn btn-danger">Sil</a></td>
										<td><a href="/Contact/UpdateContact/@item.ContactId" class="btn btn-success">Güncelle</a></td>
									</tr>
								}

							</tbody>
						</table>
						<a href="/Contact/CreateContact" class="btn btn-primary">Yeni İletişim Bilgisi Ekle</a>
					</div>
				</div>
			</div>
		</div>
	</div>





